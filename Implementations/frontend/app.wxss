/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.addBtn{
  font-size: 40px;
  line-height: 160px;
  background-color:white;
  color: lightblue;
}

.bottomBar{
  width: 420px;
  height: 80px;
  background-color: whitesmoke;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.bottomBtn{
  width: 120px;
  height: 60px;
  border-radius: 0;
  background-color:whitesmoke;
  color:black;
  font-size: 10px;
}

.btnImg {
  width:25px;
  height: 25px;
}

.bottomBtn-hover{
  width: 120px;
  height: 60px;
  border-radius: 0;
  background-color:lightblue;
  color:black;
  font-size: 10px;
}
